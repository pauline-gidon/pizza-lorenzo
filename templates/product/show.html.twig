{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Pictures</th>
                <td><img src="{{ vich_uploader_asset(product, 'picturesFile') }}"/> </td>

            </tr>

        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>


{% endblock %}
